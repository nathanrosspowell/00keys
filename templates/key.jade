
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block jumbotron
    h1
        img(src="/singlekeys/" + page.metadata.code + ".png" alt=page.title class="img-fluid")
    img(src="/colors/" + page.metadata.base + ".jpg" alt=page.metadata.base class="img-fluid")
    img(src="/colors/" + page.metadata.legend + ".jpg" alt=page.metadata.legend class="img-fluid")

block content
  h1= page.title
  article.article
    section.content!= typogr(page.html).typogrify()

block footer
  div.nav
    a(href=contents.index.url) &laquo; Home
