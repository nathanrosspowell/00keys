extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block jumbotron
  h1= page.title
  img(src=contents.singlekeys[page.metadata.code + ".png"].url alt=page.metadata.base class="img-fluid center-block")
  span= page.metadata.colorway 
  span= " - "
  span= page.metadata.profile

block content
  section.content!= typogr(page.html).typogrify()
  div
    ul.list-group
      li(class="list-group-item legend-"+page.metadata.legend + " background-" + page.metadata.base)
          h4.card-title= page.metadata.colorway
          p.card-text
      li.list-group-item
        ul.inline
          li
            img.colorchip(src=contents.colors[page.metadata.base + ".jpg"].url alt=page.metadata.base title=page.metadata.base class="img-fluid")
          li
            img.colorchip(src=contents.colors[page.metadata.legend + ".jpg"].url alt=page.metadata.legend title=page.metadata.legend class="img-fluid")

block tags
  ul.inline
    each tag in env.helpers.getTagsFromArticle(page)
      li   
        a(class="btn btn-secondary" role="button" href=env.helpers.getTagHome(tag).url)= tag
