
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block jumbotron
    h1
        img(src=contents.singlekeys[page.metadata.code + ".png"].url alt=page.metadata.base class="img-fluid")
        img(src=contents.colors[page.metadata.base + ".jpg"].url alt=page.metadata.base class="img-fluid")
        img(src=contents.colors[page.metadata.legend + ".jpg"].url alt=page.metadata.base class="img-fluid")

block content
  h1= page.title
  article.article
    section.content!= typogr(page.html).typogrify()

block footer
  div.nav
    a(href=contents.index.url) &laquo; Home
