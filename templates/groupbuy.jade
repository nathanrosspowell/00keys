
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block jumbotron
  h1= page.title
  img(src="/gbs/" + page.metadata.code + "-banner.png" alt=page.title class="img-fluid")

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block footer
  div.nav
    a(href=contents.index.url) &laquo; Home
