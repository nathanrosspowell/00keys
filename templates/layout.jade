doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
      // - The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
      meta(name="description" content=locals.name)
      meta(name="author" content=locals.owner)
      title
        block title
          = locals.name
      <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png">
      <link rel="apple-touch-icon" sizes="60x60" href="/apple-touch-icon-60x60.png">
      <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png">
      <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png">
      <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png">
      <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png">
      <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png">
      <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png">
      <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png">
      <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
      <link rel="icon" type="image/png" href="/android-chrome-192x192.png" sizes="192x192">
      <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
      <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
      <link rel="manifest" href="/manifest.json">
      <meta name="msapplication-TileColor" content="#da532c">
      <meta name="msapplication-TileImage" content="/mstile-144x144.png">
      <meta name="theme-color" content="#eceeef">
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous")
      link(rel='stylesheet', href=contents.css['bootstrap.min.css'].url)
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    div.container
      div(class="header clearfix")
        nav
          ul(class="nav nav-pills pull-xs-right")
            ul(class="nav navbar-nav")
              li.nav-item
                a(class="nav-link" href=env.config.baseUrl+"gbs/") Group Buys
              li.nav-item
                a(class="nav-link" href=env.config.baseUrl+"keys/") Keys
              li.nav-item
                a(class="nav-link" href=env.config.baseUrl+"gallery/") Gallery
        h3.text-muted
          a(href=contents.index.url)= locals.name
      block nojumbotron
        div.jumbotron
          div.container
            block jumbotron
              h1.display-3
                img.img-fluid.center-block(src=contents.img['00K4.png'].url alt="00keys" title="00keys")
              p Custom designed keycaps for your mechanical keyboard.
              ul.inline
                li
                  a(class="btn btn-lg btn-primary" href=contents.gbs.megatonvaultdrop["index.md"].url role="button") Latest Group Buy
                li
                  a(class="btn btn-lg btn-primary" href=contents.keys["v12-yca-bfk-sa1"]["index.md"].url role="button") Featured Key
      block allcontent
        block nocontent
          section
            block content
        block notags
          section
            block tags
        block nobackbutton
          section
            block backbutton
              div.nav
                a(class="btn btn-primary" href=contents.index.url) &laquo; Home
        block noabout
          if typeof pageNum === 'undefined'
            section
              block about
                h1 About
                section#about
                  !=contents['about.md'].html
            section
              block howgbswork
                h1 How Group Buys Work
                section#howgbswork
                  !=contents['how_gbs_work.md'].html
            section
              block team
                h1 Team
                section#team
                  each person in ["00zeR0", "mogo", "harlw", "nathanrosspowell"]
                    - var personPage = contents.team[person+'.md']
                    div.media
                      a.media-left(href=personPage.metadata.url)
                        img.media-objecti.team-img(src=contents.team[person+".png"].url alt=person title=person)
                      div.media-body
                        h4.media-heading= person
                        !=personPage.html
        block nocontact
          if typeof pageNum === 'undefined'
            section
              block contact
                h1 Contact
                section#contact
                  !=contents['contact.md'].html
        block nofooter
          section
            block footer
              section#footer
                p &copy; #{ new Date().getFullYear() } - 00keys - website by 
                  a(href='http://www.nathanrosspowell.com')= locals.owner

    block scripts
      script(src=contents.js['jquery.min.js'].url)
      script(src=contents.js['tether.min.js'].url)
      script(src=contents.js['bootstrap.min.js'].url)
