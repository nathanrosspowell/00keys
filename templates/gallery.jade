extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block nojumbotron

block content
  - var pics = page.metadata.pics.slice()
  - var pics = pics.reverse()
  div#carousel-example-generic.carousel.slide(data-ride="carousel")
     ol.carousel-indicators
       - var i = 0;
       each pic in pics
         - var extraClass = ""
         if i === 0
           - extraClass = "active"
         li(data-target="#carousel-example-generic" data-slide-to=i class=extraClass)
         - ++i
     div.carousel-inner(role="listbox")
       - var i = 0;
       each pic in pics
         - var extraClass = ""
         if i === 0
           - extraClass = "active"
         div.carousel-item(class=extraClass)
           img(src=pic.src alt=pic.title title=pic.title)
           div.carousel-caption
             h2= pic.title
             p
               if typeof pic.url !== 'undefined'
                 a(href=pic.url alt="Picture Credit: "+pic.credit title="Picture Credit: "+pic.credit )= pic.credit
               else
                 #{ pic.credit }

         - ++i
     a.left.carousel-control(href="#carousel-example-generic" role="button" data-slide="prev")
       span.icon-prev(aria-hidden="true")
       span.sr-only Previous
     a.right.carousel-control(href="#carousel-example-generic" role="button" data-slide="next")
       span.icon-next(aria-hidden="true")
       span.sr-only Next

block nocontact

block noabout

